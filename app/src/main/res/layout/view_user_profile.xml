<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userProfileLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <com.karhoo.uisdk.base.view.SelfValidatingTextLayout
        android:id="@+id/firstNameLayout"
        style="@style/AppTheme.EditTextProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstNameInput"
            style="@style/AppTheme.EditTextProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_name_hint"
            android:inputType="textPersonName"
            android:theme="@style/AppTheme.EditText"
            tools:text="John" />

    </com.karhoo.uisdk.base.view.SelfValidatingTextLayout>

    <com.karhoo.uisdk.base.view.SelfValidatingTextLayout
        android:id="@+id/lastNameLayout"
        style="@style/AppTheme.EditTextProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medium_small"
        android:theme="@style/AppTheme.EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastNameInput"
            style="@style/AppTheme.EditTextProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name_hint"
            android:inputType="textPersonName"
            android:theme="@style/AppTheme.EditText"
            tools:text="Doe" />

    </com.karhoo.uisdk.base.view.SelfValidatingTextLayout>

    <com.karhoo.uisdk.base.view.SelfValidatingTextLayout
        android:id="@+id/emailLayout"
        style="@style/AppTheme.EditTextProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medium_small"
        android:theme="@style/AppTheme.EditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInput"
            style="@style/AppTheme.EditTextProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:theme="@style/AppTheme.EditText"
            tools:text="john@doe.com" />

    </com.karhoo.uisdk.base.view.SelfValidatingTextLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintTop_toBottomOf="@id/emailLayout">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_xxxsmall"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.HelperEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xxxsmall"
                android:layout_marginTop="14dp"
                android:text="@string/code"
                android:textColor="@color/med_grey" />

            <com.karhoo.uisdk.base.view.countrycodes.CountryCodeSpinner
                android:id="@+id/countryCodeSpinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="26dp"
                android:backgroundTint="@color/med_grey"
                android:paddingTop="@dimen/spacing_xsmall"
                android:spinnerMode="dropdown" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="0.7">

            <com.karhoo.uisdk.base.view.SelfValidatingTextLayout
                android:id="@+id/mobileNumberLayout"
                style="@style/AppTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/spacing_xxsmall"
                android:theme="@style/AppTheme.EditText"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobileNumberInput"
                    style="@style/AppTheme.EditTextProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile_phone_number_hint"
                    android:inputType="numberDecimal"
                    android:theme="@style/AppTheme.EditText" />

            </com.karhoo.uisdk.base.view.SelfValidatingTextLayout>

        </FrameLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/updateUserDetailsProgressBar"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xsmall"
        android:layout_marginEnd="@dimen/spacing_xsmall"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/updateProfileMask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
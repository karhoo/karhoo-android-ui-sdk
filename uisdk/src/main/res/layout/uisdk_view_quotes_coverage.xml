<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/quotesErrorContainer"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/kh_uisdk_spacing_small"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/quotesErrorIcon"
        android:layout_width="@dimen/kh_uisdk_spacing_xxxlarge"
        android:layout_height="@dimen/kh_uisdk_spacing_xxxlarge"
        android:src="@drawable/kh_uisdk_ic_no_coverage_quotes" />

    <TextView
        android:id="@+id/quotesErrorTitle"
        style="@style/KhQuotesErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
        android:gravity="center"
        tools:text="We don't have any fleets in this area yet." />

    <TextView
        android:id="@+id/quotesErrorSubtitle"
        style="@style/KhQuotesErrorSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
        android:gravity="center"
        tools:text="Contact us to suggest some." />
</LinearLayout>
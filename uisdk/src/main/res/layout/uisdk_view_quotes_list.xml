<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quotesListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/KhSQuotesListView"
    android:gravity="bottom"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/chevronIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kh_uisdk_spacing_xsmall"
            android:layout_marginEnd="@dimen/kh_uisdk_spacing_xsmall"
            android:paddingTop="@dimen/kh_uisdk_spacing_xsmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/uisdk_asl_chevron" />

        <TextView
            android:id="@+id/quotesTaxesAndFeesLabel"
            style="@style/Text.Alternative.XSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/kh_uisdk_fees_and_taxes_included"
            android:textSize="@dimen/kh_uisdk_text_size_small"
            app:layout_constraintTop_toBottomOf="@+id/chevronIcon" />

        <com.karhoo.uisdk.screen.booking.quotes.sortview.QuotesSortView
            android:id="@+id/quotesSortWidget"
            android:layout_width="@dimen/kh_uisdk_spacing_none"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kh_uisdk_margin_small"
            android:layout_marginTop="@dimen/kh_uisdk_spacing_xsmall"
            android:layout_marginEnd="@dimen/kh_uisdk_margin_small"
            android:clickable="true"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quotesTaxesAndFeesLabel" />

        <com.karhoo.uisdk.screen.booking.quotes.category.CategorySelectorView
            android:id="@+id/categorySelectorWidget"
            android:layout_width="@dimen/kh_uisdk_spacing_none"
            android:layout_height="wrap_content"
            android:background="@color/kh_uisdk_opacity_off_white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quotesSortWidget" />

        <com.karhoo.uisdk.screen.booking.quotes.list.QuotesRecyclerView
            android:id="@+id/quotesRecyclerView"
            android:layout_width="@dimen/kh_uisdk_spacing_none"
            android:layout_height="@dimen/kh_uisdk_spacing_none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorySelectorWidget" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
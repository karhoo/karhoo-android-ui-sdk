<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addressItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_small">

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="@dimen/address_icon_size_default"
        android:layout_height="@dimen/address_icon_size_default"
        android:layout_marginEnd="@dimen/spacing_small"
        app:srcCompat="@drawable/uisdk_ic_location_pin" />

    <TextView
        android:id="@+id/addressText"
        style="@style/Text.Alternative.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:singleLine="true"
        android:textSize="@dimen/text_size_medium"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit" />

</LinearLayout>

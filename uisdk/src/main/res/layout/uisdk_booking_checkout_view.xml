<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kh_uisdk_background1"
    android:orientation="vertical"
    android:paddingTop="@dimen/kh_uisdk_spacing_xsmall">

    <ScrollView
        android:id="@+id/bookingCheckoutViewLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/uisdk_white_rounded_top_background"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/bookingRequestLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.karhoo.uisdk.screen.booking.checkout.quotes.BookingQuotesView
                android:id="@+id/bookingRequestQuotesWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/kh_uisdk_spacing_xsmall"
                android:paddingStart="@dimen/kh_uisdk_spacing_small"
                android:paddingEnd="@dimen/kh_uisdk_spacing_small" />

            <com.karhoo.uisdk.screen.booking.checkout.component.views.BookingPriceView
                android:id="@+id/bookingRequestPriceWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
                android:layout_marginBottom="@dimen/kh_uisdk_spacing_small"
                android:visibility="gone"/>

            <com.karhoo.uisdk.screen.booking.checkout.loyalty.LoyaltyView
                android:id="@+id/loyaltyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
                android:layout_marginBottom="@dimen/kh_uisdk_spacing_small"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
                android:orientation="horizontal">

                <com.karhoo.uisdk.screen.booking.checkout.component.views.ActionCellView
                    android:id="@+id/bookingCheckoutPassengerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <com.karhoo.uisdk.screen.booking.checkout.comment.BookingOptionalInfoView
                android:id="@+id/bookingRequestFlightDetailsWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_small" />

            <com.karhoo.uisdk.screen.booking.checkout.comment.BookingOptionalInfoView
                android:id="@+id/bookingRequestCommentsWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_small" />

            <TextView
                android:id="@+id/paymentHeader"
                style="@style/Text.Black.XLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_grid_second_column"
                android:text="@string/kh_uisdk_payment_details"
                android:visibility="gone" />

            <com.karhoo.uisdk.screen.booking.checkout.component.views.BookingTermsView
                android:id="@+id/bookingRequestTermsWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
                android:layout_marginBottom="@dimen/kh_uisdk_spacing_small" />

            <com.karhoo.uisdk.screen.booking.checkout.legalnotice.LegalNoticeView
                android:id="@+id/checkoutLegalNoticeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
                android:layout_marginBottom="@dimen/kh_uisdk_spacing_small" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/kh_uisdk_checkout_bottom_layout"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.4">

                <TextView
                    android:id="@+id/pricingTypeText"
                    style="@style/KhBookingPriceMeteredText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Metered"/>
            </LinearLayout>

            <com.karhoo.uisdk.base.view.LoadingButtonView
                android:id="@+id/checkoutActionButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="@dimen/kh_uisdk_spacing_small"
                android:visibility="visible"
                android:layout_weight="0.6"/>
        </LinearLayout>
    </RelativeLayout>

    <com.karhoo.uisdk.screen.booking.checkout.passengerdetails.PassengerDetailsView
        android:id="@+id/passengersDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="gone" />
</LinearLayout>

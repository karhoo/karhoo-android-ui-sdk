<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/khTermsAndConditionsText"
        style="@style/KhBookingTermsTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kh_uisdk_booking_terms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/khTermsAndConditionsCheckBoxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/khTermsAndConditionsCheckBox"
            style="@style/khTermsAndConditionsCheckBox"
            android:contentDescription="@string/kh_uisdk_accessibility_checkbox_label_terms_and_conditions"
            />

        <TextView
            android:id="@+id/khTermsAndConditionsTextWithCheckBox"
            style="@style/KhBookingTermsTitleTextWithCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kh_uisdk_booking_terms"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
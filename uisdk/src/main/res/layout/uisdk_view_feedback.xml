<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feedbackTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="@string/feedback_title"
            android:textSize="@dimen/text_size_large" />

        <com.karhoo.uisdk.screen.rides.feedback.RatedQuestionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/spacing_small"
            app:field_id="@string/question_one_id"
            app:question="@string/question_one" />

        <com.karhoo.uisdk.screen.rides.feedback.RatedQuestionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/spacing_small"
            app:field_id="@string/question_two_id"
            app:question="@string/question_two" />

        <com.karhoo.uisdk.screen.rides.feedback.RatedQuestionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/spacing_small"
            app:field_id="@string/question_three_id"
            app:question="@string/question_three" />

        <com.karhoo.uisdk.screen.rides.feedback.RatedQuestionView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/spacing_small"
            app:field_id="@string/question_four_id"
            app:question="@string/question_four" />

        <TextView
            style="@style/AppTheme.EditTextWithHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:text="@string/trip_id_label"
            android:textSize="@dimen/text_size_small" />

        <EditText
            android:id="@+id/tripIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/spacing_small"
            android:enabled="false" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/full_width_button_height"
            android:background="@drawable/uisdk_booking_button_background"
            android:enabled="false"
            android:text="@string/submit"
            android:textColor="@color/text_white" />

    </LinearLayout>

</ScrollView>

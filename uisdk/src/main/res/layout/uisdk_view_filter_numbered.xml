<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filterViewItemNumericUpDownLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <ImageView
        android:id="@+id/filterViewItemImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/kh_uisdk_ic_close_cross"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/filterViewItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/textColor"
        app:layout_constraintStart_toEndOf="@id/filterViewItemImage"
        tools:text="Passenger(s)" />

    <ImageView
        android:id="@+id/filterViewItemMinusImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/kh_uisdk_ic_minus_colored"
        app:layout_constraintEnd_toStartOf="@id/filterViewItemValue"/>

    <TextView
        android:id="@+id/filterViewItemValue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@id/filterViewItemPlusImage"
        tools:text="2" />

    <ImageView
        android:id="@+id/filterViewItemPlusImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/kh_uisdk_ic_plus_colored"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

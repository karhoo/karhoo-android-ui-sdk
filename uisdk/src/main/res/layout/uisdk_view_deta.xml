<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/arrivalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
        android:layout_marginTop="@dimen/kh_uisdk_spacing_xxxsmall"
        android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
        style="@style/Text.Faded.Small"
        android:text="@string/kh_uisdk_arrival"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kh_uisdk_spacing_small"
        android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
        android:letterSpacing="-0.02"
        android:paddingBottom="@dimen/kh_uisdk_spacing_xxxsmall"
        android:textColor="@color/off_black"
        android:textSize="@dimen/kh_uisdk_text_size_medium"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrivalLabel"
        tools:text="16:59" />
</androidx.constraintlayout.widget.ConstraintLayout>
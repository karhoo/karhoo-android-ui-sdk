<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uisdk_border_background_colored"
    android:padding="@dimen/kh_uisdk_spacing_x6small">

    <ImageView
        android:id="@+id/loyaltyStaticIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/kh_ic_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loyaltyStaticText"
        style="@style/KhStaticLoyaltyView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kh_uisdk_spacing_small_intermediate"
        android:layout_marginEnd="@dimen/kh_uisdk_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/loyaltyStaticIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18 points will be added to your account after the end of the ride" />

</androidx.constraintlayout.widget.ConstraintLayout>
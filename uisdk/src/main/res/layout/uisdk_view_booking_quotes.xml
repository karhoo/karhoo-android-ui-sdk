<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/kh_uisdk_spacing_semi_small"
    android:paddingEnd="@dimen/kh_uisdk_spacing_semi_small"
    android:clickable="false">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="@dimen/kh_uisdk_quotes_logo_size"
        android:layout_height="@dimen/kh_uisdk_quotes_logo_size"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/uisdk_ic_profile" />

    <TextView
        android:id="@+id/quoteNameText"
        style="@style/KhBookingQuotesViewFleetTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kh_uisdk_spacing_semi_small"
        android:layout_marginEnd="@dimen/spacing_xxsmall"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@id/capacityWidget"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/logoImage"
        app:layout_constraintTop_toTopOf="@+id/logoImage"
        tools:text="Addison Lee" />

    <TextView
        android:id="@+id/categoryText"
        style="@style/KhBookingQuotesViewFleetType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/quoteNameText"
        app:layout_constraintTop_toBottomOf="@id/quoteNameText"
        tools:text="Berline" />

    <TextView
        android:id="@+id/bookingQuoteCancellationText"
        style="@style/KhBookingQuotesViewFleetCancellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@id/logoImage"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        tools:text="Free cancellation up to 21 minutes before pickup" />

    <com.karhoo.uisdk.screen.booking.quotes.capacity.CapacityView
        android:id="@+id/capacityWidget"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
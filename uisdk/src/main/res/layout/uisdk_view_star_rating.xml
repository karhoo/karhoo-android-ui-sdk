<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:minHeight="@dimen/spacing_large"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ratingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_xxsmall"
        android:text="@string/rate_trip_label"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="@dimen/rating_wdith"
        android:layout_height="@dimen/rating_height"
        android:numStars="5"
        android:orientation="horizontal"
        android:stepSize="1"
        android:theme="@style/RatingBar" />

    <LinearLayout
        android:id="@+id/labelLayout"
        android:layout_width="@dimen/rating_wdith"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/spacing_none"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/star_poor"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone" />

        <TextView
            android:layout_width="@dimen/spacing_none"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/star_fair"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone" />

        <TextView
            android:layout_width="@dimen/spacing_none"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/star_good"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone" />

        <TextView
            android:layout_width="@dimen/spacing_none"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/star_great"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone" />

        <TextView
            android:layout_width="@dimen/spacing_none"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/star_excellent"
            android:textSize="@dimen/text_size_xsmall"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/additionalFeedbackButton"
        style="@style/TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="@string/additional_feedback"
        android:text="@string/submit_button_text"
        android:visibility="gone" />

</LinearLayout>
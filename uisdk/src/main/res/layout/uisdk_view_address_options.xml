<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addressOptions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/off_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/setOnMap"
        android:layout_width="@dimen/kh_uisdk_address_options_default"
        android:layout_height="@dimen/kh_uisdk_spacing_none"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/kh_uisdk_spacing_small"
        android:paddingRight="@dimen/kh_uisdk_spacing_small">

        <ImageView
            android:layout_width="@dimen/kh_uisdk_address_icon_size_default"
            android:layout_height="@dimen/kh_uisdk_address_icon_size_default"
            android:layout_marginRight="@dimen/kh_uisdk_spacing_small"
            style="@style/KhBookingMapSelectorIcon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/kh_uisdk_spacing_large"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kh_uisdk_map_selector"
                android:textColor="@color/off_black"
                android:textSize="@dimen/kh_uisdk_text_size_medium" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/currentLocation"
        android:layout_width="@dimen/kh_uisdk_address_options_default"
        android:layout_height="@dimen/kh_uisdk_spacing_none"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/kh_uisdk_spacing_small"
        android:paddingRight="@dimen/kh_uisdk_spacing_small">

        <ImageView
            android:layout_width="@dimen/kh_uisdk_address_icon_size_default"
            android:layout_height="@dimen/kh_uisdk_address_icon_size_default"
            android:layout_marginRight="@dimen/kh_uisdk_spacing_small"
            style="@style/KhBookingMapLocationIcon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/kh_uisdk_spacing_large"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kh_uisdk_current_location"
                android:textColor="@color/off_black"
                android:textSize="@dimen/kh_uisdk_text_size_medium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/cancelButton"
        style="@style/Text.Action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/kh_uisdk_spacing_xsmall"
        android:text="@string/kh_uisdk_cancel_ride"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/contactFleetButton"
        style="@style/Text.Action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/kh_uisdk_spacing_xsmall"
        android:text="@string/kh_uisdk_contact_fleet"
        app:layout_constraintTop_toBottomOf="@+id/cancelButton" />

    <Button
        android:id="@+id/contactDriverButton"
        style="@style/Text.Action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kh_uisdk_contact_driver"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/contactFleetButton" />

</LinearLayout>
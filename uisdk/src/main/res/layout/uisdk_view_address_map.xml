<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.karhoo.uisdk.screen.address.map.picker.AddressPickerView
        android:id="@+id/addressSelectionWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kh_uisdk_spacing_medium"
        android:layout_marginTop="@dimen/kh_uisdk_spacing_xxlarge"
        android:layout_marginEnd="@dimen/kh_uisdk_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hjcdkscndksjnckjdns" />

    <FrameLayout
        android:id="@+id/mapLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="120dp">

        <ImageView
            android:id="@+id/pickupPinIcon"
            style="@style/KhAddressMapPickupIcon"
            android:layout_width="@dimen/kh_uisdk_spacing_medium"
            android:layout_height="@dimen/kh_uisdk_spacing_medium_large"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/kh_uisdk_icon_size_medium" />

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addressSelectButton"
        style="@style/KhAddressMapSelectLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
        android:layout_marginBottom="@dimen/kh_uisdk_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <ImageView
        android:id="@+id/mapDismissIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/kh_uisdk_spacing_small"
        android:src="?attr/homeAsUpIndicator"
        app:tint="@color/kh_uisdk_text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
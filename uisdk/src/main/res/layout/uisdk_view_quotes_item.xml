<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/kh_uisdk_spacing_small"
    android:background="@drawable/kh_uisdk_quote_list_item_background"
    android:orientation="vertical"
    android:padding="@dimen/kh_uisdk_spacing_none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/kh_uisdk_spacing_x6small"
            android:paddingEnd="@dimen/kh_uisdk_spacing_x6small"
            android:paddingTop="@dimen/kh_uisdk_spacing_none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/kh_uisdk_logo_height"
                android:orientation="horizontal"
                android:weightSum="1">

                <FrameLayout
                    android:paddingTop="@dimen/kh_uisdk_spacing_semi_small"
                    android:layout_width="@dimen/kh_uisdk_logo_width"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/quoteProgressBar"
                        style="@android:style/Widget.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/logoImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <ImageView
                            android:id="@+id/logoBadgeImage"
                            android:layout_width="@dimen/kh_uisdk_icon_size"
                            android:layout_height="@dimen/kh_uisdk_icon_size"
                            android:layout_alignTop="@id/logoImage"
                            android:layout_alignEnd="@id/logoImage"
                            android:scaleType="fitXY"
                            android:importantForAccessibility="no"/>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/loadingIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/uisdk_ic_quotes_logo_loading"
                        android:importantForAccessibility="no"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/kh_uisdk_spacing_semi_small"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/kh_uisdk_spacing_x6small"
                    android:paddingEnd="@dimen/kh_uisdk_spacing_x6small">

                    <TextView
                        android:id="@+id/categoryText"
                        style="@style/QuotesFontTitleTextAppearance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textSize="@dimen/kh_uisdk_text_size_medium"
                        tools:text="Car" />

                    <com.karhoo.uisdk.screen.booking.quotes.capacity.CapacityView
                        android:id="@+id/capacityWidget"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <TextView
                    android:id="@+id/detailsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/kh_uisdk_quote_list_item_details_background"
                    android:paddingStart="@dimen/kh_uisdk_spacing_small"
                    android:paddingTop="@dimen/kh_uisdk_spacing_semi_small"
                    android:paddingEnd="@dimen/kh_uisdk_spacing_small"
                    android:paddingBottom="@dimen/kh_uisdk_spacing_semi_small"
                    android:textColor="@color/white"
                    android:textSize="@dimen/kh_uisdk_text_size_xsmall"
                    tools:text="Details" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/kh_uisdk_spacing_x6small"
            android:orientation="horizontal"
            android:paddingStart="@dimen/kh_uisdk_spacing_semi_small"
            android:paddingEnd="@dimen/kh_uisdk_spacing_semi_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/etaText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/QuotesFontTextAppearance"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/kh_uisdk_loading_min"
                    android:textColor="@color/kh_uisdk_text_primary"
                    android:textSize="@dimen/kh_uisdk_text_size_medium"
                    tools:text="99 min" />

                <TextView
                    android:id="@+id/driverArrivalText"
                    style="@style/QuotesFontTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/kh_uisdk_label"
                    android:text="@string/kh_uisdk_driver_arrival"
                    android:textSize="@dimen/kh_uisdk_text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:maxLines="1"
                    style="@style/QuotesFontTextAppearance"
                    android:textStyle="bold"
                    android:textColor="@color/kh_uisdk_text_primary"
                    android:textSize="@dimen/kh_uisdk_text_size_medium"
                    tools:text="GBP100.00 - 100.00" />

                <TextView
                    android:id="@+id/fareTypeText"
                    style="@style/QuotesFontTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:textColor="@color/kh_uisdk_label"
                    android:textSize="@dimen/kh_uisdk_text_size_small"
                    tools:text="Fixed" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/bt_border_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kh_uisdk_quote_list_item_review_background"
            android:orientation="horizontal"
            android:paddingStart="@dimen/kh_uisdk_spacing_semi_small"
            android:paddingTop="@dimen/kh_uisdk_spacing_x6small"
            android:paddingBottom="@dimen/kh_uisdk_spacing_x6small"
            android:paddingEnd="@dimen/kh_uisdk_spacing_semi_small">

            <ImageView
                android:id="@+id/logoImageSmall"
                android:layout_width="@dimen/kh_uisdk_spacing_small"
                android:layout_height="@dimen/kh_uisdk_spacing_small"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:importantForAccessibility="no"/>

            <TextView
                android:id="@+id/quoteNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/kh_uisdk_spacing_xxsmall"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/kh_uisdk_text_primary"
                android:textSize="@dimen/kh_uisdk_text_size_xsmall"
                tools:text="Quote Name" />

            <LinearLayout
                android:id="@+id/quoteFleetRatingLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/uisdk_ic_star" />

                <TextView
                    android:id="@+id/quoteFleetRating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/kh_uisdk_warning"
                    android:textSize="@dimen/kh_uisdk_text_size_xsmall"
                    tools:text="Fleet Rating" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
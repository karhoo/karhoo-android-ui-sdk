<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kh_uisdk_spacing_xsmall"
        android:layout_marginTop="@dimen/kh_uisdk_spacing_xxsmall"
        android:layout_marginEnd="@dimen/kh_uisdk_spacing_xsmall"
        android:layout_marginBottom="@dimen/kh_uisdk_spacing_xxsmall"
        android:animateLayoutChanges="true"
        android:elevation="@dimen/elevation_default"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="@dimen/logo_size"
                    android:layout_height="@dimen/logo_size"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/bookingTermsText"
                    style="@style/Text.Primary.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateTimeText"
                    style="@style/Text.Faded.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bookingTermsText"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/pickupTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dateTimeText"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/kh_uisdk_spacing_xxsmall"
                    android:background="@drawable/uisdk_background_off_black_rounded"
                    android:paddingLeft="@dimen/kh_uisdk_spacing_xxsmall"
                    android:paddingTop="@dimen/kh_uisdk_spacing_xxxsmall"
                    android:paddingRight="@dimen/kh_uisdk_spacing_xxsmall"
                    android:paddingBottom="@dimen/kh_uisdk_spacing_xxxsmall"
                    android:text="@string/kh_uisdk_pickup_type_meet_and_greet"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_size_xsmall" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/kh_uisdk_spacing_small"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/kh_uisdk_spacing_small"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pickupBallIcon"
                    style="@style/KhPickUpDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/kh_uisdk_spacing_xsmall" />

                <TextView
                    android:id="@+id/pickupLabel"
                    style="@style/Text.Primary.SmallMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    tools:text="Sample location" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/kh_uisdk_spacing_small">

                <ImageView
                    android:id="@+id/dropoffBallIcon"
                    style="@style/KhDropOffDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/kh_uisdk_spacing_xsmall" />

                <TextView
                    android:id="@+id/dropOffLabel"
                    style="@style/Text.Primary.SmallMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    tools:text="Pharmacy" />

            </LinearLayout>

            <TextView
                android:id="@+id/carText"
                style="@style/Text.Faded.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/kh_uisdk_spacing_large"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/kh_uisdk_status" />

                <ImageView
                    android:id="@+id/stateIcon"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_marginRight="@dimen/icon_size_small" />

                <TextView
                    android:id="@+id/stateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small_medium" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/kh_uisdk_spacing_large"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/priceTypeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/kh_uisdk_spacing_xxsmall"
                    android:text="@string/kh_uisdk_base" />

                <ImageView
                    android:id="@+id/baseFareIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/kh_uisdk_spacing_small"
                    android:scaleType="fitStart"
                    android:src="@drawable/uisdk_ic_help" />

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="@dimen/kh_uisdk_spacing_none"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/off_black"
                    android:textSize="@dimen/text_size_small_medium" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <!-- START: MAKE VISIBLE WHEN CARD DETAILS AVAILABLE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/kh_uisdk_spacing_large"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/kh_uisdk_spacing_none"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/kh_uisdk_card" />

                <ImageView
                    android:id="@+id/cardLogoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cardNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/off_black"
                    android:textSize="@dimen/text_size_small_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/flightDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kh_uisdk_spacing_large"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/kh_uisdk_spacing_none"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="@string/kh_uisdk_flight_number" />

                    <TextView
                        android:id="@+id/flightNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/off_black"
                        android:textSize="@dimen/text_size_small_medium" />

                </LinearLayout>

                <!-- START: MAKE VISIBLE WHEN MEETING POINT AVAILABLE -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/kh_uisdk_spacing_large"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingRight="@dimen/kh_uisdk_spacing_medium_small"
                        android:text="@string/kh_uisdk_meeting_point" />

                    <TextView
                        android:id="@+id/meetingPointText"
                        android:layout_width="@dimen/kh_uisdk_spacing_none"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingTop="@dimen/kh_uisdk_spacing_xxsmall"
                        android:paddingBottom="@dimen/kh_uisdk_spacing_xxsmall"
                        android:textColor="@color/off_black"
                        android:textSize="@dimen/text_size_small_medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider" />

                <!-- END: MAKE VISIBLE WHEN MEETING POINT AVAILABLE -->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/kh_uisdk_spacing_large"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingRight="@dimen/kh_uisdk_spacing_medium_small"
                        android:text="@string/kh_uisdk_info" />

                    <TextView
                        android:id="@+id/commentsText"
                        android:layout_width="@dimen/kh_uisdk_spacing_none"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingTop="@dimen/kh_uisdk_spacing_xxsmall"
                        android:paddingBottom="@dimen/kh_uisdk_spacing_xxsmall"
                        android:textColor="@color/off_black"
                        android:textSize="@dimen/text_size_small_medium" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/divider"
                    android:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider"
                android:visibility="gone" />
            <!-- END: MAKE VISIBLE WHEN CARD DETAILS AVAILABLE -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/kh_uisdk_spacing_large"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/kh_uisdk_spacing_none"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="@string/kh_uisdk_karhoo_id" />

                <TextView
                    android:id="@+id/karhooId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/off_black"
                    android:textSize="@dimen/text_size_small_medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/rideDetailCancellationText"
                style="@style/Text.Primary.Small.Green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/kh_uisdk_spacing_xsmall"
                android:visibility="gone"
                tools:text="Free cancellation up to 21 minutes before pickup"
                tools:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider" />

            <com.karhoo.uisdk.screen.rides.detail.rating.RatingView
                android:id="@+id/starRatingWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:id="@+id/ratingDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/divider"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/kh_uisdk_spacing_xsmall"
                android:paddingEnd="@dimen/kh_uisdk_spacing_xsmall">

                <Button
                    android:id="@+id/reportIssueButton"
                    style="@style/Text.Action"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/kh_uisdk_spacing_large"
                    android:layout_weight="1"
                    android:text="@string/kh_uisdk_report_issue" />

                <Button
                    android:id="@+id/rebookRideButton"
                    style="@style/Text.Action"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/kh_uisdk_spacing_large"
                    android:layout_marginLeft="@dimen/kh_uisdk_spacing_xsmall"
                    android:layout_weight="1"
                    android:text="@string/kh_uisdk_rebook_ride"
                    android:visibility="visible" />

                <com.karhoo.uisdk.screen.trip.bookingstatus.contact.ContactOptionsView
                    android:id="@+id/contactOptionsWidget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>
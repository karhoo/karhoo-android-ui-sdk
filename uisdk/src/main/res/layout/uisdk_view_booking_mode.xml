<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/kh_uisdk_background2"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loyaltyInfoLayout"
        style="@style/KhBookingCoverageInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/loyaltyInfoText"
            style="@style/KhBookingCoverageInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/kh_uisdk_spacing_xxsmall"
            android:layout_marginEnd="@dimen/kh_uisdk_spacing_small"
            android:text="@string/kh_uisdk_asap_no_coverage_warning" />
    </LinearLayout>

    <LinearLayout
        style="@style/KhNowScheduleActionButtonContainer">

        <LinearLayout
            android:id="@+id/nowActionButton"
            style="@style/KhNowActionButtonContainer">

            <TextView style="@style/KhNowActionButtonText" />
        </LinearLayout>

        <Space
            android:id="@+id/bookingModeActionButtonSpace"
            android:layout_width="@dimen/kh_uisdk_spacing_small"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/scheduleActionButton"
            style="@style/KhScheduleActionButtonContainer">

            <TextView style="@style/KhScheduleActionButtonText" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
